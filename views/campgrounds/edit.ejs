<% include ./partials/header %>
<div class="container">

    <div class="row" >
       
     <h1 style="text-align:center;">Create a New Campground</h1>
     <div style="width:30%; margin: 26px auto; ">
         <!-- ------------------------- form --------------------------------------- -->
         <form action="/campground/<%= campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
            <label>Name</label>
            <input class="form-control" type="text" name="camp[name]" value="<%= campground.name%>">
            </div>
            
            <div class="form-group">
            <label>Image Link</label>
            <input class="form-control" type="text" name="camp[image]" value="<%= campground.image%>">
            </div>
            
            <div class="form-group">
            <label>Description</label>
            <input class="form-control" type="text" name="camp[description]" value="<%= campground.description%>">
            </div>
            
            <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
         </form>
         <a href="/campGround">Go Back</a>
      </div> 
    </div>

</div>





<% include ./partials/footer %>